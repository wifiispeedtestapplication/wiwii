<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Wiwii.Profile">
    <ContentPage.Content>
        
        <Grid Padding="20" ColumnSpacing="10" RowSpacing="20"
              BackgroundColor="#0d0e21" >
            
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Label x:Name="lblprofile"
                   Text="User Profile"
                  HorizontalTextAlignment="End"
                   TextColor="white"
                   FontAttributes="Bold"
                   FontSize="Large"
                   />
            <Label x:Name="lblEmail"
                    Grid.Row="1"
                    Text="EMail"
                    TextColor="#b292c5"
                  FontAttributes="Bold"
                    FontSize="Large"/>
            <Label x:Name="value"
                  
                    Grid.Row="1"
                    Grid.Column="1"
                    Text="Georgiancollege@ontario.ca"
                   
                   FontSize="Large"
                    TextColor="#00a8a8"
                    />
            <Label x:Name="lblphone"
                    Grid.Row="2"
                    Text="Contact"
                    FontAttributes="Bold"
                    FontSize="Large"
                    TextColor="#b292c5"
                   
                    />
           
            <Label x:Name="phone"
                    Grid.Row="2"
                    Grid.Column="1"
                   FontAttributes="Bold"
                   FontSize="Large"
                    Text="(705)-728-1968"
                    TextColor="#00a8a8"
                  />
             <Label x:Name="bthlocation"
                    Grid.Row="3"
                    Text="Location"
                    TextColor="#b292c5"
                  FontAttributes="Bold"
                    FontSize="Large"/>
            <Label x:Name="location"
                  
                    Grid.Row="3"
                    Grid.Column="1"
                    Text="Barrie,Ontario"
                   FontAttributes="Bold"
                   FontSize="Large"
                    TextColor="#00a8a8"
                    />
            <Button x:Name="btnCANCEL"
                    Grid.Row="4"
                    Text="CANCEL"
                    TextColor="white"
                    BackgroundColor="#2774aa"/>
            <Button x:Name="btnSAVE"
                    Grid.Row="4"
                    Grid.Column="1"
                    Text="SAVE"
                    TextColor="white"
                    BackgroundColor="#2774aa"/>
        </Grid>
    </ContentPage.Content>
</ContentPage>
